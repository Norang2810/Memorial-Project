datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Memorial {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}


model User {
  id        Int       @id @default(autoincrement())
  nickname  String    @unique
  memorials Memorial[]
}
